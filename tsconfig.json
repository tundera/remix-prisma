{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "module": "esnext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "types": ["node", "react/next", "react-dom/next"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", ".eslintrc.js", "*.config.js"],
  "exclude": ["node_modules", "test", "cypress", "worker", "jest.config.ts", "jest.setup.ts"]
}
